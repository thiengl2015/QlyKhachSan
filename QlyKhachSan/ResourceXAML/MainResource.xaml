<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewmodel="clr-namespace:QlyKhachSan.ViewModel"
                    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">
    <viewmodel:MainViewModel x:Key="MainVM" ></viewmodel:MainViewModel>
    <viewmodel:TestViewModel x:Key="TestVM" ></viewmodel:TestViewModel>

    <Style x:Key="comboobox:style1" TargetType="ComboBox">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Border Background="White"
                            BorderBrush="#07209e"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="4"
                            SnapsToDevicePixels="True">
                        <DockPanel>
                            <ContentPresenter Margin="2"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              RecognizesAccessKey="True" />
                            <ToggleButton DockPanel.Dock="Right"
                               Focusable="False"
                               IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                ClickMode="Press"
                                Background="Transparent"
                                BorderThickness="0"
                                Width="20"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right">
                                <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                    Fill="Black"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                            </ToggleButton>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--style button thông thường-->
    <Style TargetType="Button"
           x:Key="button:style1">
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="FontWeight"
                Value="Medium" />
        <Setter Property="Width"
                Value="120" />
        <Setter Property="Height"
                Value="30" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder"
                            BorderBrush="#07209e"
                            Background="#9acbff"
                            BorderThickness="1"
                            CornerRadius="10">
                        <ContentPresenter  x:Name="text"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextElement.Foreground="#07209e" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter TargetName="ButtonBorder"
                                    Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#cfcfcf"
                                                      Direction="45"
                                                      ShadowDepth="4"
                                                      Opacity="0.5"
                                                      BlurRadius="10" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="ButtonBorder"
                                    Property="Background"
                                    Value="#07209e" />
                            <Setter TargetName="text"
                                    Property="TextElement.Foreground"
                                    Value="#9acbff" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--Style textblock thông thường-->
    <Style TargetType="TextBlock"
           x:Key="textblock:style1">
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="FontWeight"
                Value="Medium" />
        <Setter Property="Foreground"
                Value="#07209e" />
        <Setter Property="IsHitTestVisible"
                Value="False" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
    </Style>
    <!--Style textbox thông thường-->
    <Style TargetType="TextBox"
           x:Key="textbox:style1">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="White"
                            BorderBrush="#07209e"
                            BorderThickness="1"
                            CornerRadius="10"
                            Height="30"
                            Width="150">
                        <TextBox x:Name="tb"
                                 FontSize="14"
                                 FontWeight="Medium"
                                 Margin="5"
                                 BorderBrush="Transparent"
                                 Background="white"
                                 BorderThickness="0"
                                 IsEnabled="{Binding Path= IsEnabled, RelativeSource={RelativeSource AncestorType=TextBox}}"
                                 Text="{Binding Path = Text, RelativeSource={RelativeSource AncestorType=TextBox}}"></TextBox>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="tb"
                                    Property="BorderBrush"
                                    Value="#07209e" />
                            <Setter TargetName="tb"
                                    Property="BorderThickness"
                                    Value="0,0,0,2" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--Style textbox readOnly-->
    <Style TargetType="TextBox"
           x:Key="textbox:readonly">
        <Setter Property="IsReadOnly"
                Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="#EBEBEB"
                            BorderBrush="#07209e"
                            BorderThickness="1"
                            CornerRadius="10"
                            Height="30"
                            Width="150">
                        <TextBox x:Name="tb"
                                 FontSize="14"
                                 FontWeight="Medium"
                                 Margin="5"
                                 BorderBrush="Transparent"
                                 Background="#EBEBEB"
                                 BorderThickness="0"
                                 Text="{Binding Path = Text, RelativeSource={RelativeSource AncestorType=TextBox}}"></TextBox>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="tb"
                                    Property="BorderBrush"
                                    Value="#07209e" />
                            <Setter TargetName="tb"
                                    Property="BorderThickness"
                                    Value="0,0,0,2" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--Style cho combobox thông thường-->
    <Style TargetType="ComboBox"
           x:Key="combobox:style1">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Border x:Name="Border"
                            Background="#EBEBEB"
                            BorderBrush="#07209e"
                            BorderThickness="1"
                            CornerRadius="10"
                            Height="37"
                            Width="150">
                        <ComboBox x:Name="cb"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  Margin="5"
                                  BorderBrush="Transparent"
                                  Background="White"
                                  BorderThickness="0"
                                  Text="{Binding Path = Text, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                  ItemsSource="{Binding Path = ItemsSource, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                  IsEditable="False">
                        </ComboBox>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="cb"
                                    Property="BorderBrush"
                                    Value="#07209e" />
                            <Setter TargetName="cb"
                                    Property="BorderThickness"
                                    Value="0,0,0,2" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--Style datpicker thông thường-->
    <Style TargetType="DatePicker"
           x:Key="datepick:style1">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DatePicker">
                    <Border Background="White"
                            BorderBrush="#07209e"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="4"
                            ClipToBounds="True"
                            Height="30"
                            Width="150">
                        <DatePicker x:Name="tb"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    BorderBrush="Transparent"
                                    Background="white"
                                    Height="30"
                                    SelectedDateFormat="Short"
                                    BorderThickness="0"
                                    Text="{Binding Path = Text, RelativeSource={RelativeSource AncestorType=DatePicker}}"
                                    SelectedDate="{Binding Path = SelectedDate, RelativeSource={RelativeSource AncestorType=DatePicker}}">
                        </DatePicker>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="tb"
                                    Property="BorderBrush"
                                    Value="#07209e" />
                            <Setter TargetName="tb"
                                    Property="BorderThickness"
                                    Value="0,0,0,2" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--Style cho icon trong menu-->
    <Style TargetType="fa:IconImage"
           x:Key="icon:menu">
        <Setter Property="Foreground"
                Value="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}" />
        <Setter Property="Width"
                Value="30" />
        <Setter Property="Height"
                Value="30" />
        <Setter Property="Margin"
                Value="5,0,10,0" />
    </Style>
    <!-- Style cho TextBlock trong Menu-->
    <Style TargetType="TextBlock"
           x:Key="textblock:menu">
        <Setter Property="Foreground"
                Value="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}" />
        <Setter Property="FontWeight"
                Value="Medium" />
        <Setter Property="FontSize"
                Value="10" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
    </Style>
    <!-- Style cho RadioButton trong Menu-->
    <Style TargetType="RadioButton"
           x:Key="rbutton:menu">
        <Setter Property="Height"
                Value="40" />
        <Setter Property="Width"
                Value="190" />
        <Setter Property="Margin"
                Value="-10,0,0,5" />
        <Setter Property="Background"
                Value="#9acbff" />
        <Setter Property="Foreground"
                Value="#07209e" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="0,5,5,0">
                        <ContentPresenter HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          Margin="20,0,0,0" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Margin"
                                    Value="0,0,0,5" />
                            <Setter Property="Background"
                                    Value="#07209e" />
                            <Setter Property="Foreground"
                                    Value="#d4ebf8" />
                        </Trigger>

                        <Trigger Property="IsChecked"
                                 Value="True">
                            <Setter Property="Margin"
                                    Value="0,0,0,5" />
                            <Setter Property="Background"
                                    Value="#07209e" />
                            <Setter Property="Foreground"
                                    Value="#d4ebf8" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- Style for DataGrid -->
    <Style TargetType="DataGrid">
        <Setter Property="Background"
                Value="#FFFFFF" />
        <Setter Property="Foreground"
                Value="#333333" />
        <Setter Property="BorderBrush"
                Value="#07209e" />
        <Setter Property="BorderThickness"
                Value="2" />
        <Setter Property="RowBackground"
                Value="#FFFFFF" />
        <Setter Property="AlternatingRowBackground"
                Value="#e6f3ff" />
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="FontWeight"
                Value="Medium" />
        <Setter Property="HorizontalAlignment"
                Value="Stretch" />
        <Setter Property="VerticalAlignment"
                Value="Stretch" />
        <Setter Property="AutoGenerateColumns"
                Value="False" />
        <Setter Property="IsReadOnly"
                Value="True" />
        <Setter Property="CanUserReorderColumns"
                Value="False" />
        <Setter Property="VerticalScrollBarVisibility"
                Value="Auto" />
        <Setter Property="HorizontalScrollBarVisibility"
                Value="Auto" />
    </Style>
    <!-- Style for DataGridHeader -->
    <Style TargetType="DataGridRowHeader">
        <Setter Property="Background"
                Value="White" />
    </Style>
    <!-- Style for DataGridHeader -->
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background"
                Value="#9acbff" />
        <Setter Property="Foreground"
                Value="#07209e" />
        <Setter Property="BorderBrush"
                Value="#07209e" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="Height"
                Value="35" />
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="Padding"
                Value="2,0,2,0" />
        <Setter Property="FontWeight"
                Value="Bold" />
        <Setter Property="HorizontalContentAlignment"
                Value="Center" />
        <Setter Property="VerticalContentAlignment"
                Value="Center" />
    </Style>
</ResourceDictionary>