<Page x:Class="QlyKhachSan.View.LapHoaDonThanhToanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:QlyKhachSan.View"
      xmlns:vm="clr-namespace:QlyKhachSan.ViewModel"
      mc:Ignorable="d"
      d:DesignHeight="700"
      d:DesignWidth="680"
      Title="Lập hóa đơn thanh toán">
    <Grid Background="White">
        <Grid.DataContext>
            <vm:LapHoaDonThanhToanViewModel />
        </Grid.DataContext>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="#e6f3ff">
            <TextBlock Text="Lập hóa đơn thanh toán"
                       Margin="0,0,20,0"
                       FontSize="30"
                       FontWeight="Bold"
                       FontFamily="roboto"
                       Foreground="#07209e"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right" />
        </Grid>
        <Grid Background="#e6f3ff"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>
                <TextBlock Text="Mã hóa đơn: "
                           Margin="5"
                           Style="{StaticResource textblock:style1}"
                           Grid.Row="1"
                           Grid.Column="1"
                           HorizontalAlignment="Left" />
                <TextBlock Text="Tên khách hàng/cơ quan: "
                           Margin="5"
                           Style="{StaticResource textblock:style1}"
                           Grid.Row="1"
                           Grid.Column="2"
                           HorizontalAlignment="Left" />
                <TextBlock Text="Địa chỉ: "
                           Margin="5"
                           Style="{StaticResource textblock:style1}"
                           Grid.Row="1"
                           Grid.Column="3"
                           HorizontalAlignment="Left" />
                <TextBlock Text="Trị giá: "
                           Margin="5"
                           Style="{StaticResource textblock:style1}"
                           Grid.Row="1"
                           Grid.Column="4"
                           HorizontalAlignment="Left" />
                <TextBox Grid.Column="1"
                         Grid.Row="2"
                         Margin="5"
                         Style="{StaticResource textbox:readonly}" />
                <ComboBox Grid.Column="2"
                         Grid.Row="2"
                         Margin="5"
                         Style="{StaticResource combobox:style1}" />
                <TextBox Grid.Column="3"
                         Grid.Row="2"
                         Margin="5"
                         Style="{StaticResource textbox:readonly}" 
                         Text="{Binding MaxNumberCustomers, Mode=OneTime}"/>
                <TextBox Grid.Column="4"
                         Grid.Row="2"
                         Margin="5"
                         Style="{StaticResource textbox:readonly}" 
                         Text="{Binding MaxNumberCustomers, Mode=OneTime}"/>
            </Grid>
            <DataGrid x:Name="danhsachkhachhang"
                      Grid.Row="1"
                      FontSize="14"
                      Margin="5"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      ItemsSource="{Binding DSKhachHangTrongPhieuThue}">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT"
                                        Binding="{Binding STT}"
                                        Width="50" />
                    <DataGridTemplateColumn Header="Tên phòng"
                                            Width="auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding DSPhong}"
                                          SelectedItem="{Binding PhongDuocChon, Mode=TwoWay}"
                                          DisplayMemberPath="Ten"
                                          SelectionChanged="ComboBox1_SelectionChanged"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Số ngày thuê"
                                        Binding="{Binding KhachHangDuocChon.LoaiKH, Mode=TwoWay}"
                                        Width="*" />
                    <DataGridTextColumn Header="Đơn giá"
                                        Binding="{Binding KhachHangDuocChon.CMND, Mode=TwoWay}"
                                        Width="*" />
                    <DataGridTextColumn Header="Số khách"
                                        Binding="{Binding KhachHangDuocChon.DiaChi, Mode=TwoWay}"
                                        Width="*" />
                    <DataGridTextColumn Header="Thành tiền"
                                        Binding="{Binding KhachHangDuocChon.DiaChi, Mode=TwoWay}"
                                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button
                        Content="Lập hóa đơn thanh toán"
                        Margin="5"
                        Style="{StaticResource button:style1}"
                        Command="{Binding TaoPhieuThueCommand}"
                        Width="200"/>
                <Button Content="Tìm khách hàng/cơ quan"
                        Margin="5"
                        Style="{StaticResource button:style1}"
                       Command="{Binding ThemKhachHangCommand}"
                        Width="200"/>
                <Button Content="Thoát"
                        Margin="5"
                        Style="{StaticResource button:style1}"
                        Command="{Binding TimKiemKhachHangCommand}"/>

            </StackPanel>
        </Grid>
    </Grid>
</Page>
