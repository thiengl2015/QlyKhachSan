<Page x:Class="QlyKhachSan.View.ThayDoiQuyDinhPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QlyKhachSan.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ThayDoiQuyDinhPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="#e6f3ff">
            <TextBlock Text="Thay đổi quy định"
                       Margin="0,0,20,0"
                       FontSize="30"
                       FontWeight="Bold"
                       FontFamily="roboto"
                       Foreground="#07209e"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right" />
        </Grid>
        <Grid Background="#e6f3ff"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="10" />
            </Grid.RowDefinitions>

            <Button Content="Thay đổi đơn giá loại phòng"
                    Grid.Column="1"
                    Grid.Row="1"
                    Margin="5"
                    Width="200"
                    Style="{StaticResource button:style1}"
                    Command="{Binding LuuCommand}"
                    Click="Button_Click" />
            <Button Content="Thay đổi hệ số loại khách"
                    Grid.Column="1"
                    Grid.Row="2"
                    Margin="5"
                    Width="200"
                    Style="{StaticResource button:style1}"
                    Command="{Binding LuuCommand}"
                    Click="Button_Click_1" />
            <Button Content="Thay đổi số lượng khách tối đa"
                    Grid.Column="1"
                    Grid.Row="3"
                    Margin="5"
                    Width="200"
                    Style="{StaticResource button:style1}"
                    Command="{Binding LuuCommand}"
                    Click="Button_Click_2" />
            <Button Content="Thay đổi tỉ lệ phụ thu"
                    Grid.Column="1"
                    Grid.Row="4"
                    Margin="5"
                    Width="200"
                    Style="{StaticResource button:style1}"
                    Command="{Binding LuuCommand}"
                    Click="Button_Click_3" />

        </Grid>
    </Grid>
</Page>
