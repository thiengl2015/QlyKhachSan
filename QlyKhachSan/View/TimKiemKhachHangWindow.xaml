<Window x:Class="QlyKhachSan.View.TimKiemKhachHangWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QlyKhachSan.View"
        xmlns:vm="clr-namespace:QlyKhachSan.ViewModel"
        mc:Ignorable="d"
        Title="Tìm khách hàng" Height="450" Width="850" ResizeMode="NoResize">
    <Grid Background="White">
        <Grid.DataContext>
            <vm:TimKiemKhachHangViewModel />
        </Grid.DataContext>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="#e6f3ff">
            <TextBlock Text="Tìm khách hàng"
                       Margin="0,0,20,0"
                       FontSize="30"
                       FontWeight="Bold"
                       FontFamily="roboto"
                       Foreground="#07209e"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />
        </Grid>
        <Grid Background="#e6f3ff"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Mã khách hàng: "
                       Margin="5"
                       Style="{StaticResource textblock:style1}"
                       Grid.Row="1"
                       Grid.Column="1"
                       HorizontalAlignment="Left" />
            <TextBlock Text="Tên khách hàng: "
                       Margin="5"
                       Style="{StaticResource textblock:style1}"
                       Grid.Row="1"
                       Grid.Column="2"
                       HorizontalAlignment="Left" />
            <TextBlock Text="Loại khách hàng: "
                       Margin="5"
                       Style="{StaticResource textblock:style1}"
                       Grid.Row="1"
                       Grid.Column="3"
                       HorizontalAlignment="Left" />
            <TextBlock Text="CMND: "
                       Margin="5"
                       Style="{StaticResource textblock:style1}"
                       Grid.Row="1"
                       Grid.Column="4"
                       HorizontalAlignment="Left" />
            <TextBlock Text="Địa chỉ: "
                       Margin="5"
                       Style="{StaticResource textblock:style1}"
                       Grid.Row="1"
                       Grid.Column="5"
                       HorizontalAlignment="Left" />
            <TextBox Grid.Column="1"
                     Grid.Row="2"
                     Margin="5"
                     Text="{Binding MaKH}"
                     Style="{StaticResource textbox:style1}" />
            <TextBox Grid.Column="2"
                     Grid.Row="2"
                     Margin="5"
                     Text="{Binding TenKH}"
                     Style="{StaticResource textbox:style1}" />
            <ComboBox Grid.Column="3"
                      Grid.Row="2"
                      Margin="5"
                      ItemsSource="{Binding DsLoaiKhachHang}"
                      SelectedItem="{Binding LoaiKH, UpdateSourceTrigger=PropertyChanged}"
                      Style="{StaticResource combobox:style1}" />
            <TextBox Grid.Column="4"
                     Grid.Row="2"
                     Margin="5"
                     Text="{Binding CMND}"
                     Style="{StaticResource textbox:style1}" />
            <TextBox Grid.Column="5"
                     Grid.Row="2"
                     Margin="5"
                     Text="{Binding DiaChi}"
                     Style="{StaticResource textbox:style1}" />
            <Button Content="Tìm khách hàng"
                    Grid.Column="1"
                    Grid.Row="3"
                    Margin="5"
                    Command="{Binding TimKhachHangCommand}"
                    Style="{StaticResource button:style1}" />
            <Button Content="Thoát"
                    Grid.Column="5"
                    Grid.Row="3"
                    Margin="5"
                    Style="{StaticResource button:style1}" />
            <DataGrid x:Name="phong"
                      Grid.Column="1"
                      Grid.ColumnSpan="5"
                      Margin="5"
                      Width="790"
                      Grid.Row="4"
                      FontSize="14"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      IsReadOnly="True"
                      ItemsSource="{Binding DSKhachHang }">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã khách hàng"
                                        Width="*"
                                        Binding="{Binding MaKH }" />
                    <DataGridTextColumn Header="Tên khách hàng"
                                        Width="*"
                                        Binding="{Binding TenKH}" />
                    <DataGridTextColumn Header="Loại khách hàng"
                                        Width="*"
                                        Binding="{Binding LoaiKH }" />
                    <DataGridTextColumn Header="CMND"
                                        Width="*"
                                        Binding="{Binding CMND }" />
                    <DataGridTextColumn Header="Địa chỉ"
                                        Width="*"
                                        Binding="{Binding DiaChi}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
